<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="212dp"
        android:layout_height="84dp"
        android:layout_marginTop="36dp"
        android:textColor="#121111"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkb1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="219dp"
        android:layout_height="30dp"
        android:layout_marginStart="126dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="126dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_name"
        android:layout_width="251dp"
        android:layout_height="75dp"
        android:layout_marginTop="88dp"
        android:hint="@string/Enter_Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/show_name_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="276dp"
        android:text="@string/Button_Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkb1"
        android:layout_width="121dp"
        android:layout_height="64dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="96dp"
        android:onClick="checked"
        android:text="@string/checked1"
        app:layout_constraintEnd_toStartOf="@+id/checkb2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_name_button" />

    <CheckBox
        android:id="@+id/checkb2"
        android:layout_width="148dp"
        android:layout_height="71dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="48dp"
        android:onClick="checked"
        android:text="@string/checked2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_name_button" />

    <Button
        android:id="@+id/Go_To_Second_Activity_btn"
        android:layout_width="128dp"
        android:layout_height="63dp"
        android:layout_marginTop="8dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_name_button" />

    <Button
        android:id="@+id/recycler_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="21dp"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/Go_To_Second_Activity_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/go_torealm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="76dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/Go_To_Second_Activity_btn"
        app:layout_constraintTop_toBottomOf="@+id/input_name" />

    <Button
        android:id="@+id/myitembtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="284dp"
        android:layout_marginEnd="25dp"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/show_name_button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>